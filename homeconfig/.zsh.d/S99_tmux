if [[ -z "$TMUX" && -z "$SUDO_USER" && -e "/usr/bin/tmux" ]]; then
    if ! cat /proc/self/cgroup | grep lxc > /dev/null; then
        NAME=$HOSTNAME
        if tmux has-session -t $NAME 2> /dev/null; then
            exec tmux -2 at -t $NAME
        else
            exec tmux -2 new -s $NAME
        fi
    fi
fi
