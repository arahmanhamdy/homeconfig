#!/bin/zsh

autoload zmv
alias mmv='noglob zmv -W'

# For giggles
alias du="du -hcs"
alias df="df -h"

alias ls="ls --color=auto"
alias la="ls --color=always -a"
alias ll="ls --color=always -l"
alias lla="ls --color=always -la"
alias lal="ls --color=always -la"

# cd stuff
alias .="cd .."
alias ..="cd ../.."
alias ...="cd ../../.."
alias ....="cd ../../../.."

alias cdr="cd \$vcs_info_msg_1_"

#rsa stuff
alias ssh="loadrsa; ssh"
alias scp="loadrsa; scp"
alias git="loadrsa; git"
alias hg="loadrsa; hg"

export LANG="en_US.utf8"

alias grep="grep --colour=auto"

vik(){
       sed -i $1d ~/.ssh/known_hosts
}

ssh2(){
        cat ~/.ssh/id_rsa.pub | /usr/bin/ssh $1 'umask 077; test -d .ssh || mkdir .ssh; cat > /tmp/mykey && grep "`cat /tmp/mykey`" ~/.ssh/authorized_keys &> /dev/null || cat /tmp/mykey >> ~/.ssh/authorized_keys' || return 1
            /usr/bin/ssh $1
}

loadkey(){
    eval `keychain -q --eval --agents ssh id_rsa`
}

function v(){
    vimbin="vim"
    if [ -z "$@" ] ; then
        $vimbin -c "normal '0";
    else
        $vimbin `echo "$@" | cut -d: -f1,2 | sed -e 's/:/ +/g'`;
    fi
}

function cd() {
    local cdto="BKMRK_${1}"
    cdto="${(P)cdto}"
    if [ -n "$cdto" -a ! -e "${1}" ]; then
        local extra=`echo "$1" | cut -d / -f 2-`
        if [ "$extra" = "$1" ]; then
            extra=""
        fi
        builtin cd "$cdto/$extra"
        return
    fi
    builtin cd $*
}

function yaourt(){
    /usr/bin/yaourt $*
    hash -r
}

function hgp(){
    sed -i "s/pretxncommit.pyflakes/#pretxncommit.pyflakes/" ~/.hgrc
    hg $*
    exitcode=$?
    sed -i "s/#pretxncommit.pyflakes/pretxncommit.pyflakes/" ~/.hgrc
    return $exitcode
    
}
