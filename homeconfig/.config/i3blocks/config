# short_text
# signal
# urgent

# Global properties
separator_block_width=15

#[wisdom]
#command=curl http://proverbs-app.antjan.us/random
#interval=3600

[volume]
label=
instance=130/5
command=~/.config/i3blocks/blocks/i3blocks-volume-pulse
interval=once

[wireless]
label=
instance=bond0
command=/usr/lib/i3blocks/iface
interval=10

[bandwith]
label=
command=~/.config/i3blocks/blocks/bandwidth
interval=1

[cpu]
label=
command=/usr/lib/i3blocks/cpu_usage -w -c
interval=5
min_width=  100.00%
align=center

[battery]
label=⚡
command=/usr/lib/i3blocks/battery
interval=5

[time]
label= 
command=date '+%H:%M %B %d'
interval=30


