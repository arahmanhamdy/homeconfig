[ui]
username = Jo De Boeck <jdeboeck@aserver.com>
editor = /usr/bin/vim -c "r ~/.hgtemplate"
merge = meld
ssh = ssh -C

[extensions]
fetch = 
mercurial_reviewboard =
churn =
color = 
extdiff = 
hgext.graphlog = 
purge = 
bookmarks = 
transplant = 
pager =
hgext.hgk=
rebase =
mq =

[reviewboard]
server = http://172.20.12.3
user = deboeckj

[hooks]
pretxncommit.pyflakes = python:hghooks.code.pyflakeshook
#pretxncommit.pep8 = python:hghooks.code.pep8hook
pretxncommit.pdb = python:hghooks.code.pdbhook

[pep8]
ignore = E501,E302,E225,E303

[extdiff]
cmd.meld = 

[hgk]
meld=meld

[pager]
pager = less -R
attend = annotate, cat, df, diff, glog, help, in-diff, incoming, log, out-diff, outgoing, qdiff, show, tip, grep

[bookmarks]
track.current = True

[alias]
duw = push -r .
ditch = revert --no-backup
blame = annotate -u
stat = !hg status $($HG root) $HG_ARGS
