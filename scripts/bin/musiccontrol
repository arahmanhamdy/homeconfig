#!/bin/bash
command=$1

function mpris() {
   appname=$1
   dbus-send --print-reply --dest=org.mpris.MediaPlayer2.$appname /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.$command

}

function xbmc() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c="-k p" ;;
        *) return 1;
   esac
   xbmcremote --host=xbmc.lan $c

}

if ps -eaf | grep -v grep | grep audacious; then
    mpris audacious

elif ps -eaf | grep -v grep | grep xbmcremote; then
    xbmc
else
    mpris pragha
fi
