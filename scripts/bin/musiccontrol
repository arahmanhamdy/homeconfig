#!/bin/bash
command=$1

function mpris() {
   appname=$1
   dbus-send --print-reply --dest=org.mpris.MediaPlayer2.$appname /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.$command

}

function xbmc() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c=" " ;;
        *) return 1;
   esac
   xbmcremote --host=xbmc.lan -k "$c"

}

function mpv() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c="pause" ;;
        *) return 1;
   esac
   echo $c > ~/.mpv/fifo

}

function mpc() {
    c=""
    case $command in
        "Next" ) c="next" ;;
        "Prev" ) c="previous" ;;
        "Pause") c="pause" ;;
        "PlayPause") c="toggle" ;;
        *) return 1;
   esac
   /usr/bin/mpc "$c"

}

if ps -eaf | grep -v grep | grep mpv; then
    mpv
elif ps -eaf | grep -v grep | grep audacious; then
    mpris audacious
elif ps -eaf | grep -v grep | grep xbmcremote; then
    xbmc
else
    mpc
fi
