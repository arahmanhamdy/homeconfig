#!/bin/bash
command=$1

function mpris() {
   appname=$1
   dbus-send --print-reply --dest=org.mpris.MediaPlayer2.$appname /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.$command

}

function xbmc() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c=" " ;;
        *) return 1;
   esac
   kodiremote -k "$c"

}

function praghac() {
    c=""
    case $command in
        "Next" ) c="-n" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c="-t" ;;
        *) return 1;
   esac
   pragha "$c"
}

function mpv() {
    c=""
    case $command in
        "Next" ) c="-f" ;;
        "Prev" ) c="-r" ;;
        "PlayPause") c="cycle pause" ;;
        *) return 1;
   esac
   echo $c > ~/.mpv/fifo

}

function mpc() {
    c=""
    case $command in
        "Next" ) c="next" ;;
        "Prev" ) c="previous" ;;
        "Pause") c="pause" ;;
        "PlayPause") c="toggle" ;;
        *) return 1;
   esac
   /usr/bin/mpc "$c"

}

if ps -eaf | grep -v grep | grep mpv; then
    mpv
elif ps -eaf | grep -v grep | grep audacious; then
    mpris audacious
elif ps -eaf | grep -v grep | grep kodiremote; then
    xbmc
elif ps -eaf | grep -v grep | grep pragha; then
    praghac
else
    mpc
fi
