#!/usr/bin/env python3
from sys import argv

if len(argv) == 1: # scriptname
    print("Enter math expression to evaluate")
else:
    expr = "".join(argv[1:])
    result = str(eval(expr))
    width = max(len(expr), len(result)) + 3
    print("{0: >{1}}".format(expr, width))
    print('=')
    print("{0: >{1}}".format(result, width))
