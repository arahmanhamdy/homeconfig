#!/bin/bash
if [ $UID != "0" ]; then
    echo "Run this as root moron!"
    exit 1
fi

name="maverick"
chrootdir="/home/Jo/work/bin/${name}"
for d in sys dev proc; do
    brol=`mount | grep "${chrootdir}/${d}"`
    if [ $? -ne 0 ]; then
        mount --rbind /${d} "${chrootdir}/${d}"
    fi
done

