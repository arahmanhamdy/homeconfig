#if [ $? -ne 0  ]; then
#   mount -t smbfs -o username=ReleaseManager,password="een.vijf" //172.17.1.17/InstallFramework /mnt/ipr/
#fi
#brol=`mount | grep '/home/grimpy/Dev/minimaldapper/mnt/ipr'`
#if [ $? -ne 0 ]; then
#    mount --bind /mnt/ipr/ /home/grimpy/Dev/minimaldapper/mnt/ipr/
#fi
export debian_chroot="maverick"
chroot ${chrootdir} /bin/zsh
