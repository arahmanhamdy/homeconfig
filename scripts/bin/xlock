#!/bin/bash
CONFIG=~/.config/xautolock
option=$1

function lock() {
    echo "KILLAGENT" | gpg-connect-agent
    wmctrl -x -r keepassxc -b add,hidden
    dm-tool lock
}

case $option in
    enable)
        touch $CONFIG
        ;;
    disable)
        rm $CONFIG
        ;;
    force)
        lock
        ;;
    toggle)
        if [ -e "$CONFIG" ]; then
            rm $CONFIG
            echo "DISABLED"
        else
            touch $CONFIG
            echo "ENABLED"
        fi
        ;;
    *)
        if [ -e "$CONFIG" ]; then
            lock
        fi
        ;;
esac
